<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvRunningProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#F8F2F2"
        android:text="Running Program"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#A69E9E"
        android:textColorHighlight="#131212"
        android:textColorLink="#F9F9FA"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFirst"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:text="first level"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="200dp"
        app:layout_constraintEnd_toEndOf="@+id/tvRunningProgram"
        app:layout_constraintStart_toStartOf="@+id/tvRunningProgram"
        app:layout_constraintTop_toBottomOf="@+id/tvRunningProgram" />

    <Button
        android:id="@+id/btnSecond"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:text="second level"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="200dp"
        app:layout_constraintEnd_toEndOf="@+id/btnFirst"
        app:layout_constraintStart_toStartOf="@+id/btnFirst"
        app:layout_constraintTop_toBottomOf="@+id/btnFirst" />

    <Button
        android:id="@+id/btnThird"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:text="third level"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="200dp"
        app:layout_constraintEnd_toEndOf="@+id/btnSecond"
        app:layout_constraintStart_toStartOf="@+id/btnSecond"
        app:layout_constraintTop_toBottomOf="@+id/btnSecond" />

    <Button
        android:id="@+id/btnInfinity"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:text="infinity level"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="200dp"
        app:layout_constraintEnd_toEndOf="@+id/btnThird"
        app:layout_constraintStart_toStartOf="@+id/btnThird"
        app:layout_constraintTop_toBottomOf="@+id/btnThird" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="132dp"
        android:text="@string/return_to_menu"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnInfinity"
        app:layout_constraintStart_toStartOf="@+id/btnInfinity"
        app:layout_constraintTop_toBottomOf="@+id/btnInfinity" />
</androidx.constraintlayout.widget.ConstraintLayout>